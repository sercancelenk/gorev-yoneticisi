<h1>Listing tasks</h1>
<style>
  body {background-color:whitesmoke}
  h1   {color:blue}
  p    {color:green}
  th { border:1px solid maroon;text-align:left }
  td { border:1px solid maroon;text-align:left }
  table{border:1px solid gray;width:100%}
</style>
<table>
  <thead>
    <tr>
      <th>Gorev</th>
      <th>Aciklama</th>
      <th>Durum?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.gorev %></td>
        <td><%= task.aciklama %></td>
        <td><%= (task.tamamlandi==true)? "Tamamlandi":"Tamamlanmadi" %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
